{
  "compilerOptions": {
    "baseUrl": "./",
    "alwaysStrict": true,
    "strict": true,
    "module": "CommonJS",
    "sourceMap": true,
    "target": "ES2018",
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./types/**/*",
    "./src/**/*",
    "./test/**/*"
  ]
}
